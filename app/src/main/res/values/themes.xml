<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AgriApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green</item>
        <!-- Customize your theme here. -->



    </style>

    // toolbar theme

    <style name="Theme.ToolbarNormal" parent="TextAppearance.AppCompat">
        <item name="navigationIcon">@drawable/ic_arrow_left</item>
        <item name="elevation">5dp</item>
        <item name="background">@color/green</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="roundedImage6">
        <item name="cornerSize">@dimen/dp_5</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:radius">2dp</item>
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">2dp</item>
    </style>

    //
    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">5dp</item>
    </style>

    <style name="CustomSwitchSetting" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@drawable/switch_thumb_selector</item>
        <item name="trackTint">@drawable/switch_track_selector</item>
    </style>
</resources>